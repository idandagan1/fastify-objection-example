{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "strict": true,
    "outDir": "./dist",
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "lib": [
      "esnext"
    ],
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "importHelpers": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "src"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "./typings/*.ts"
  ]
}
