{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "strict": true,
    "outDir": "./dist",
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "lib": [ "es2015" ],
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "src"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "typings/**/*.ts"
  ],
  "exclude": [
    ".eslintrc.js"
  ]
}
